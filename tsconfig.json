{
    "version": "1.6.0",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "web/js",
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "listFiles": true
    },
    "filesGlob": [
        "src/**/*.ts"
    ],
    "files": [
        "node_modules/angular2/bundles/typings/angular2/angular2.d.ts",
        "node_modules/angular2/bundles/typings/angular2/http.d.ts",
        "node_modules/angular2/bundles/typings/angular2/router.d.ts",
        "node_modules/@reactivex/rxjs/es6/Rx.d.ts",
        "src/app.ts",
        "src/components/calendar.ts",
        "src/components/contacts.ts",
        "src/components/messages.ts",
        "src/components/tasks.ts",
        "src/datatypes/task.ts",
        "src/services/contact-service.ts",
        "src/services/task-service.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
